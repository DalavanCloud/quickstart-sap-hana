            "us-west-1": {
                "AWSNAT": "ami-004b0f60"
            },
            "us-west-2": {
                "AWSNAT": "ami-a275b1c2"
            }
        }
    },
    "Outputs": {},
    "Resources": {
        "VPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": {
                    "Ref": "VPCCIDR"
                },
                "EnableDnsHostnames": "true",
                "EnableDnsSupport": "true",
                "Tags": [
                    {
                        "Key": "Application",
                        "Value": "SAP HANA"
                    }
                ]
            }
        },
        "InternetGateway": {
            "Type": "AWS::EC2::InternetGateway"
        },
        "AttachGateway": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "InternetGatewayId": {
                    "Ref": "InternetGateway"
                }
            }
        },
        "BaseNodes": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://s3.amazonaws.com/quickstart-reference/sap/hana/latest/templates/SAP-HANA-BaseNodes.template",
                "Parameters": {
                    "PrivSubCIDR": {
                        "Ref": "PrivSubCIDR"
                    },
                    "DMZCIDR": {
                        "Ref": "DMZCIDR"
                    },
                    "VPCID": {
                        "Fn::GetAtt": [
                            "BaseNetwork",
                            "Outputs.VPCID"
                        ]
                    },
                    "HANASubnet": {
                        "Fn::GetAtt": [
                            "BaseNetwork",
                            "Outputs.HANASubnet"
                        ]
                    },
                    "DMZSubnet": {
                        "Fn::GetAtt": [
                            "BaseNetwork",
                            "Outputs.PublicSubnet"
                        ]
                    },
                    "DomainName": {
                        "Ref": "DomainName"
                    },
                    "RemoteAccessCIDR": {
                        "Ref": "RemoteAccessCIDR"
                    },
                    "HANAMasterHostname": {
                        "Ref": "HANAMasterHostname"
                    },
                    "HANAWorkerHostname": {
                        "Ref": "HANAWorkerHostname"
                    },
                    "PlacementGroupName": {
                        "Fn::If": [
                            "PlacementGroupNull",
                            {
                                "Ref": "AWS::NoValue"
                            },
                            {
                                "Fn::Join": [
                                    "",
                                    [
                                        {
                                            "Ref": "PlacementGroupName"
                                        },
                                        ""
                                    ]
                                ]
                            }
                        ]
                    },
                    "PrivateBucket": {
                        "Ref": "PrivateBucket"
                    },
                    "KeyName": {
                        "Ref": "KeyName"
                    },
                    "MyOS": {
                        "Ref": "MyOS"
                    },
                    "MyInstanceType": {
                        "Ref": "MyInstanceType"
                    },
                    "RDPInstanceType": {
                        "Ref": "RDPInstanceType"
                    },
                    "InstallRDPInstance": {
                        "Ref": "InstallRDPInstance"
                    },
                    "InstallHANA": {
                        "Ref": "InstallHANA"
                    },
                    "Encryption": {
                        "Ref": "Encryption"
                    },
                    "HostCount": {
                        "Ref": "HostCount"
                    },
                    "SID": {
                        "Ref": "SID"
                    },
                    "SAPInstanceNum": {
                        "Ref": "SAPInstanceNum"
                    },
                    "HANAMasterPass": {
                        "Ref": "HANAMasterPass"
                    },
                    "HANAInstallMedia": {
                        "Ref": "HANAInstallMedia"
                    },
                    "AutoRecovery": {
                        "Ref": "AutoRecovery"
                    }
                }
            }
        },
        "BaseNetwork": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://s3.amazonaws.com/quickstart-reference/sap/hana/latest/templates/SAP-HANA-BaseNetwork.template",
                "Parameters": {
                    "VPC": {
                        "Ref": "VPC"
                    },
                    "InternetGateway": {
                        "Ref": "InternetGateway"
                    },
                    "VPCCIDR": {
                        "Ref": "VPCCIDR"
                    },
                    "DMZCIDR": {
                        "Ref": "DMZCIDR"
                    },
                    "PrivSubCIDR": {
                        "Ref": "PrivSubCIDR"
                    },
                    "RemoteAccessCIDR": {
                        "Ref": "RemoteAccessCIDR"
                    },
                    "KeyName": {
                        "Ref": "KeyName"
                    },
                    "BASTIONInstanceType": {
                        "Ref": "BASTIONInstanceType"
                    },
                    "AvailabilityZone": {
                        "Ref": "AvailabilityZone"
                    }
                }
            }
        }
    }
}
